@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutWelcome.cshtml";
}

<div id="form-login">
    <form method="post">
        <legend>Đăng nhập</legend>
        <div class="form-group">
            <input id="username-email" name="Email" placeholder="E-mail or Phone" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input id="password" name="Password" placeholder="Password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <span id="errormsg"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"><strong> Nhớ mật khẩu</strong>
                    </label>
                    @*<a ui-sref="ForgotPassword" class="forgot-pass" href="/Account/ForgotPassword">Quên mật khẩu?</a>*@
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-success">Đăng nhập</button>
        </div>
        <p>
            Chưa có tài khoản? <a href="/Account/register">Đăng ký ngay</a>
        </p>
    </form>
</div>

<script type="text/javascript">
    $('.btn-success').on('click', function () {
        $(this).html('<i class="fa fa-refresh fa-spin"></i> Đăng nhập');
    });

</script>
