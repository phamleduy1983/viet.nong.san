@using ArduinoService.Resource
@using ArduinoService.Models
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- Toast -->
    <script src="~/mainlayout/js/toastr.js"></script>
    <link href="~/mainlayout/toast/toastr.min.css" rel="stylesheet" />

    <!-- jqgrid -->



    <style>
        nav {
            background: #437905;
        }

        .panel-primary {
            border-color: #4B8609;
        }

            .panel-primary > .panel-heading {
                background-color: #4B8609;
            }

        .list-group .active {
            background-color: #4B8609;
        }

        a {
            color: black;
        }

        .list-group-item.active, .list-group-item.active:hover, .list-group-item.active:focus {
            background-color: #4B8609;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/MainMenu">IoT</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @{
                                if (Session[ConstantClass.SESSION_USERNAME] != null)
                                {
                                    @Session[ConstantClass.SESSION_FULLNAME]
                                }
                            }
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Home/MainMenu">Garden</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Account/Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="col-sm-3 menuleft">
        <div class="list-group">
            <div class="list-group-item active">
                Tools
            </div>
            <a href="/AdminArea/AdminArea" class="list-group-item">Get Token</a>
        </div>
    </div>
    <div class="col-sm-9 body">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Get Token</h3>
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>

    </div>
</body>
</html>
